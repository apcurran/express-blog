<% if (locals.error) { %>
    <p class="form-error"><%= error %></p>
<% } %> 
<% if (messages) { %>
    <p class="form-error"><%= messages.error %> </p>
<% } %>
<div class="form-group">
    <label for="username" class="form-group__label">Username</label>
    <input value="<%= locals.username ? username : "" %>" type="text" name="username" class="form-group__input" id="username" required>
</div>
<div class="form-group">
    <label for="password" class="form-group__label">Password</label>
    <input value="<%= locals.password ? password : "" %>" type="password" name="password" class="form-group__input" id="password" required>
</div>
<% if (!locals.loginForm) { %>
    <div class="form-group">
        <label for="code" class="form-group__label">Admin Code</label>
        <input value="<%= locals.code ? code : "" %>" type="password" name="code" class="form-group__input" id="code" required>
    </div>
<% } %>
<a href="/" class="form-cancel">Cancel</a>
<button type="submit" class="form-submit">Submit</button>